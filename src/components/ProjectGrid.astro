---
import type { CollectionEntry } from "astro:content";
import ProjectCard from "./ProjectCard.astro";

type Props = {
  projects: CollectionEntry<"projects">[];
};

const { projects } = Astro.props;
const grid = "projects";

const sortedProjects = projects;
---

<section class="project-grid" id="grid" data-grid={grid}>
  {sortedProjects.map((project) => <ProjectCard project={project} />)}
</section>


<style>
section {
    position: relative;
    overflow: visible;
    display: grid;
    width: 100%;
    max-width: 100vw; /* Prevents overflow */
    box-sizing: border-box;
    grid-template-columns: repeat(auto-fill, var(--rect-width, 26.1rem));
    gap: 2rem;
    justify-content: center;
    margin-top: 5rem;
    margin-bottom: 2rem;
    min-height: 70vh;
}
    
  @media screen and (max-width: 50em) {
  section {
    --rect-width: 100%;
        margin-top: 2rem;

    grid-template-columns: 1fr; /* Optional override for clarity */
    width: 96vw; /* Adjust width for smaller screens */
  }
}

</style>
