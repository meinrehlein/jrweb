---
import type { CollectionEntry } from "astro:content";

type Props = {
  project: CollectionEntry<"projects">;
};

const { project } = Astro.props;
---
 <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
<div
  class="project"
  style={`--image: url('${project.data.images?.[0]?.src ?? ''}'); --rect-aspect: 1/1.417`}
  data-name={project.data.name}
  aria-label={project.data.name}
>
  {project.data.kind === 'text' && (
    <div class="titlebox">
        <p>{project.data.title}</p>
      </div>
    <div class="rectangle-content">
      
      <p>
        <span class="lang-de">{project.body}</span>
        <span class="lang-en">{project.data.body_en ?? project.body}</span>
      </p>
    </div>
  )}
  <!--  {project.data.kind === 'image' && project.data.images && (
    //    <div class="images">
     // <img src={project.data.images[0].src} alt={project.data.images[0].alt} />
    //</div>)
    } -->
  {project.data.kind === 'video' && project.data.video && (
    <div class="video-wrapper">
      <video id="video" src={project.data.video} type="application/x-mpegURL" muted loop playsinline></video>
      <button class="mute-toggle" aria-label="Toggle sound">unmute</button>
    </div>
    
  )}

</div>
 <script>
        if (Hls.isSupported()) {
          var video = document.getElementById('video');
          var hls = new Hls();
          hls.loadSource(video.src);
          hls.attachMedia(video);
        }else{
            alert("Cannot stream HLS, use another video source");
        }
    </script>
<style>
  .project-card {
    display: flex;
    flex-direction: column;
    align-items: stretch;
  }
  .project-label {
    margin-bottom: 0.5rem;
    font-weight: bold;
    text-align: center;
  }
  .project {
    position: relative;
    background-image: var(--image);
    background-size: cover;
    background-position: center;
    aspect-ratio: var(--rect-aspect, 1 / 1.417);
    height: auto;
    border: 1px solid var(--border-color);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 16px rgba(61, 61, 61, 0.2);
    overflow: hidden;
    flex-direction: column;
    width: var(--rect-width, 26.1rem);
  } 

.titlebox {
    height: 2rem;
    min-height: 4rem;
    max-height: 3rem;
    overflow-y: hidden;
    text-align: left;
    font-weight:bold;  }

  .rectangle-content {
    align-items: flex-start;
    flex-direction: column;
    padding: 2rem;
    padding-top: calc(2rem + 10%);
    box-sizing: border-box;
    flex-direction: column;

  }
  .video-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }
  .mute-toggle {
    position: absolute;
    left: 0.5rem;
    bottom: 0.5rem;
    z-index: 1;
    background: rgba(0,0,0,0.5);
    color: white;
    border: none;
    padding: 0.25rem 0.5rem;
    cursor: pointer;
  }
  .images img,
  video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  video {
    display: block;
  }
</style>